<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:padding="16dp"
    >

    <LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_weight="1"
	    >

		<TextView
			android:id="@+id/tv_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_color"
			android:textSize="@dimen/listitem_title_size_16"
			tools:text="@string/map_name"
			android:maxLines="1"
			/>

	    <TextView
	        android:id="@+id/tv_map_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_color"
	        android:textSize="@dimen/listitem_title_size_14"
			tools:text="Map ID：123"
			android:visibility="visible"
			android:maxLines="1"
	        />

		<TextView
			android:id="@+id/tv_map_create_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_color"
			android:textSize="@dimen/listitem_title_size_14"
			tools:text="Map Time：123"
			android:visibility="visible"
			android:maxLines="1"
			/>

		<TextView
			android:id="@+id/tv_map_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_color"
			android:textSize="@dimen/listitem_title_size_14"
			tools:text="Map Size：100 x 100"
			android:maxLines="1"
			/>

		<TextView
			android:id="@+id/tv_map_is_default"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="@dimen/listitem_title_size_12"
			android:text="@string/default_nav_map"
			android:maxLines="1"
			android:padding="3dp"
			android:background="@drawable/bg_lable_rect"
			android:layout_marginTop="5dp"
			android:visibility="gone"
			tools:visibility="visible"
			/>

    </LinearLayout>

</LinearLayout>